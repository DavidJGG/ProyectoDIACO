@model ProyectoDIACO.Models.Queja

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar queja</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuejaId" />
            <div class="form-group">
                <input asp-for="Detalle" class="form-control" hidden />
            </div>
            <div class="form-group">
                <input asp-for="Fecha" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <label class="control-label">Estado</label>
                <select class="form-control" asp-for="Estado">
                    <option value="0">Resuelto</option>
                    <option value="1">Ingresado</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Resultado" class="control-label"></label>
                <input asp-for="Resultado" class="form-control" />
                <span asp-validation-for="Resultado" class="text-danger"></span>
            </div>
            <div>
                <p>
                    <strong>Detalle: </strong> @Model.Detalle<br />
                    <strong>Comercio: </strong> @Model.Sucursal.Comercio.Nombre<br />
                    <strong>Sucursal: </strong> @Model.Sucursal.Nombre<br />
                    <strong>Direccion: </strong> @Model.Sucursal.Direccion<br />
                    <strong>Telefono: </strong> @Model.Sucursal.Telefono<br />
                </p>
            </div>
            <div class="form-group">
                <input asp-for="UsuarioId" hidden class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="SucursalId" hidden class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
