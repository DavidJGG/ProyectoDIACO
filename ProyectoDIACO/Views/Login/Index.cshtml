
@model ProyectoDIACO.Models.LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h1 align="center">Iniciar sesión</h1>
<div class="d-flex justify-content-center">
    <form asp-action="Login" class="card p-5" style="width: 500px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Correo" class="control-label"></label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Contrasena" class="control-label"></label>
            <input asp-for="Contrasena" class="form-control" />
            <span asp-validation-for="Contrasena" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Entrar" class="btn btn-primary" />
            &nbsp;
            <a asp-action="Registrase" class="btn btn-secondary">No tengo una cuenta</a>
        </div>
    </form>
</div>

@if (ViewData["err"]!=null && (bool)ViewData["err"] == true)
{
    <script>
        $(document).ready(()=>{
            Swal.fire(
              '@ViewData["msg"]',
              '@ViewData["msg2"]',
              'error'
            );
        });
    </script>
}
