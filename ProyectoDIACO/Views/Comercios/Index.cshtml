@model IEnumerable<ProyectoDIACO.Models.Comercio>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de comercios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar un nuevo comercio</a>
</p>
<table class="table table-striped" id="tablaCom">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @if(item.Estado==1){
                    <div class="badge bg-success">Activo</div>
                }else{
                    <div class="badge bg-danger">Inactivo</div>
                }
            </td>
            <td>
                <a href="/Sucursals/Index/@item.ComercioId" class="btn btn-sm btn-warning"><i class="bi bi-shop"></i> Sucursales</a> 
                <a asp-action="Edit" asp-route-id="@item.ComercioId" class="btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i> Editar</a> 
                <a asp-action="Details" asp-route-id="@item.ComercioId" class="btn btn-sm btn-info text-white"><i class="bi bi-card-list"></i> Detalles</a> 
                    @if (item.Estado == 1)
                    {
                        <a asp-action="Delete" asp-route-id="@item.ComercioId" class="btn btn-sm btn-danger"><i class="bi bi-trash3-fill"></i> Eliminar</a>
                    }else{
                        <a asp-action="Delete" asp-route-id="@item.ComercioId" class="btn btn-sm btn-success"><i class="bi bi-recycle"></i> Activar</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>


<script>
    $(document).ready( function () {
        $('#tablaCom').DataTable({
            language: {
                "decimal":        "",
                "emptyTable":     "No hay resultados",
                "info":           "Mostrando de _START_ a _END_ de _TOTAL_ entradas",
                "infoEmpty":      "Mostrando de 0 a 0 de 0 entradas",
                "infoFiltered":   "(Filtrado un total de _MAX_ entradas)",
                "infoPostFix":    "",
                "thousands":      ",",
                "lengthMenu":     "Mostrar _MENU_ entradas",
                "loadingRecords": "Cargando...",
                "processing":     "",
                "search":         "Buscar:",
                "zeroRecords":    "No se encontraron coincidencias",
                "paginate": {
                    "first":      "Primero",
                    "last":       "Ultimo",
                    "next":       "Siguiente",
                    "previous":   "Anterior"
                },
                "aria": {
                    "sortAscending":  ": Ordenar ascendente",
                    "sortDescending": ": Ordenar descendente"
                }
            }
        });
    } );
</script>
